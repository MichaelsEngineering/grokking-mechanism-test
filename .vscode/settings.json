{
    "git.path": "/usr/bin/git",
    "terminal.integrated.defaultProfile.windows": "Ubuntu-22.04",
    "python.defaultInterpreterPath": "/usr/bin/python3",
    "python.analysis.extraPaths": [
        "${workspaceFolder}/src"
    ],
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "-q"
    ],
    "editor.formatOnSave": true,
    "files.trimTrailingWhitespace": true,
    // Let VS Code auto-run Ruff fixes and import sorting on save
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
        "source.organizeImports": true,
        // Optional: be explicit about Ruff providers
        "source.fixAll.ruff": true,
        "source.organizeImports.ruff": true
    },
    // Use Ruff as the Python formatter
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    // Avoid formatter fights
    "python.formatting.provider": "none",
    "jupyter.alwaysTrustNotebooks": false,
    "makefile.configureOnOpen": false
}